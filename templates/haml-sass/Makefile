# This Makefile was generated by the made script:
# https://github.com/alx741/made
#
# Dependencies:
# 	haml
# 	sass


HAML_DIR = ./src/haml
SASS_DIR = ./src/sass
BUILD_DIR = ./build

HAML_FILES = $(shell find $(HAML_DIR) -type f -name '*.haml')
SASS_FILES = $(shell find $(SASS_DIR) -type f -name '*.sass')
HTML := ${HAML_FILES:.haml=.html}
CSS := ${SASS_FILES:.sass=.css}

all: $(HTML) $(CSS)
	echo $(HTML)

%.html: %.haml
	haml $< $(BUILD_DIR)/$(notdir $@)

%.css: %.sass
	sass $< >> $(BUILD_DIR)/$(notdir $@)

clean:
	rm -rf $(BUILD_DIR)/*
