# This Makefile was generated by the made script:
# https://github.com/alx741/made
#
# Replace FILE with your C code filename
# Replace MMCU with the target chip model
#
# Dependencies:
# 	avr-gcc
# 	avr-binutils
# 	avrdude


FILE=your_file
MMCU=chip_model
AVRDUDE_PART=m328p	# list valid parts with `avrdude -p '?'`
AVRDUDE_PROGRAMMER=usbasp
F_CPU=1000000


CFLAGS =
CFLAGS += -mmcu=$(MMCU)
CFLAGS += -DF_CPU=$(F_CPU)UL
CFLAGS += -Os
CFLAGS += -g


$(FILE).hex: $(FILE).elf
	avr-objcopy -j .text -j .data -O ihex $< $@

$(FILE).elf: $(FILE).c
	avr-gcc $(CFLAGS) $< -o $@

clean:
	rm $(FILE).elf $(FILE).hex

burn:
	avrdude -p $(AVRDUDE_PART) -c $(AVRDUDE_PROGRAMMER) -U flash:w:$(file).hex
