# This Makefile was generated by the made script:
# https://github.com/alx741/made
#
# Dependencies:
# 	R with rmarkdown

INPUTS = $(shell find . -type f -name '*.Rmd')
OUTPUTS = $(foreach input, $(INPUTS), $(input:.Rmd=.pdf))

all: $(OUTPUTS)
	echo $(OUTPUTS)

%.pdf: %.Rmd
	echo "library(rmarkdown);render('$<', output_format="pdf_document")" | R --vanilla

clean:
	rm $(OUTPUTS)
