#!/bin/sh

TEMPLATES=(markdown latex)


function args_validation()
{
    if [[ $# -ne 1 ]];
    then
        echo
        echo "USE: $0 template"
        echo
        echo "Use the -l option for listing templates"
        echo
        exit 1
    fi

    if ! template_exists "$1";
    then
        echo
        echo "[!] Template for $1 does not exists"
        echo
        exit 1
    fi
}


function template_exists()
{
    for i in "${TEMPLATES[@]}"
    do
        if [[ "$1" == "$i" ]];
        then
            return 0;
        fi
    done
    return 1;
}


function list_templates()
{
    echo
    echo "Templates:"
    echo
    for i in "${TEMPLATES[@]}"
    do
        echo "$i"
    done
    echo
}



args_validation "$@"
