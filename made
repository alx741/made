#!/bin/sh

TEMPLATES=(markdown latex)



function args_validation()
{
    if [[ $# -ne 1 ]];
    then
        echo
        echo "USE: $0 template"
        echo
        exit 1
    fi

    if ! template_exists "$1";
    then
        echo
        echo "[!] Template $1 does not exists"
        echo
        exit 1
    fi
}

function template_exists()
{
    for i in "${TEMPLATES[@]}"
    do
        if [[ "$1" == "$i" ]];
        then
            return 0;
        fi
    done
    return 1;
}

args_validation "$@"
